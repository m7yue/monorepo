{
  "npmClient": "npm",
  "npmClientArgs" : [ "--production" , "--no-optional" ],
  "packages": [
    "packages/*",
    "packages/@m7yue/*"
  ],
  "useWorkspaces": false,
  "version": "0.0.0",
  "command": {
    "bootstrap": {
